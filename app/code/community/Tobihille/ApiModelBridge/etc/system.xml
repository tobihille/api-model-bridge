<?xml version="1.0"?>
<config>
  <sections>
      <api>
        <groups>
          <apimodelbridge translate="label">
            <label>Api-ModelBridge</label>
            <frontend_type>text</frontend_type>
            <sort_order>150</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <fields>
              <enable translate="label comment">
                <label>Enable ApiModelBringe?</label>
                <comment><![CDATA[<span style="color: red; font-weight: bold">Note:</span><br/>
Due to the nature of this module there is no further acl than 'access'.<br/>
If access is granted every model can be fetched, updated and deleted.<br/>
Use with <b>extreme</b> care or disable it completely when you are not certain that you need it.<br/>
If you disable this, the following functions are also disabled]]></comment>
                <frontend_type>select</frontend_type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <sort_order>5</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>0</show_in_store>
              </enable>
              <enable_put translate="label comment">
                <label>Enable Inserts or Updates</label>
                <comment><![CDATA[<span style="color: red; font-weight: bold">Note:</span><br/>
Disables the put function, should disable updates and inserts.]]></comment>
                <frontend_type>select</frontend_type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <sort_order>10</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>0</show_in_store>
              </enable_put>
              <enable_delete translate="label comment">
                <label>Enable ApiModelBringe?</label>
                <comment><![CDATA[<span style="color: red; font-weight: bold">Note:</span><br/>
Disables the delete function, should disable deletes.]]></comment>
                <frontend_type>select</frontend_type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <sort_order>15</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>0</show_in_store>
              </enable_delete>
              <return_fault translate="label comment">
                <label>Return faults instead of empty data</label>
                <comment><![CDATA[Default behaviour: return fault instead of empty data. Disable if you do not wish to do error handling on the other side.]]></comment>
                <frontend_type>select</frontend_type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <sort_order>20</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>0</show_in_store>
              </return_fault>
            </fields>
          </apimodelbridge>
        </groups>
      </api>
  </sections>
</config>
